<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topPanel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/receiptbackground"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/logo_imgview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/myshoplogo" />


    <!--Layout for Header Portion-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_view"
        android:orientation="vertical">


        <!--Add Header part here -->


    </LinearLayout>

    <!--Layout for Item Details Portion-->

    <LinearLayout
        android:id="@+id/transaction_detail_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/receipt_summary_rectangle"
        android:orientation="vertical">


        <!--We add Dynamic views in this part-->


    </LinearLayout>



    <!--Layout for Footer Portion-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/footer_view"
        android:orientation="vertical">

        <!--Footer Addition-->
    </LinearLayout>

</LinearLayout>